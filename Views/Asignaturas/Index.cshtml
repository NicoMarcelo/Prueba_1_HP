@model IEnumerable<Prueba_1_HP.Models.Asignatura>

@{
    ViewData["Title"] = "Index";
}

<h1>Asignaturas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreAsignatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionAsignatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaActualizaciónAsignatura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreAsignatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionAsignatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaActualizaciónAsignatura)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-light" asp-route-id="@item.CodigoAsignatura">Actualizar</a> |
                <a asp-action="Details" class="btn btn-success" class="btn btn-light" asp-route-id="@item.CodigoAsignatura">Ver</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CodigoAsignatura">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
